pipeline {
    agent docker
    
    stages{
        stage("Code"){
            steps{
                git url: "https://github.com/KuShivam045/Jenkins.git", branch: "main"
            }
        }
        stage("test message "){
            steps{
                sh "echo thsis pipleine going to deploy djang app"  
            }
        }
        
        stage("Deploy"){
            steps{
                sh " docker-compose  down "
                sh  "docker-compose up -d  --no-deps --build  web "
                sh "docker ps "
               
            }
        }
    }
}

